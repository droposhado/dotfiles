# based on
# https://github.com/jessfraz/dotfiles/blob/master/.dockerfunc

del_stopped(){
  local name=$1
  local state
  state=$(docker inspect --format "{{.State.Running}}" "$name" 2>/dev/null)

  if [[ "$state" == "false" ]]; then
    docker rm "$name"
  fi
}

gitleaks(){
  docker run -it --rm \
    -v "${PWD}:/path" \
    --source="/path" \
    --name terraform \
    hashicorp/terraform:1.5.4 "$@"
}

tf(){
  docker run -it --rm \
    -v "${PWD}:/data" \
    --name gitleaks \
    zricethezav/gitleaks:latest "$@"
}